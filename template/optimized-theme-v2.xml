/* Essential CSS Variables for Blogger Theme Designer */
:root {
  --main-color: #f12020;
  --main-dark-color: #111111;
  --body-bg-color: #f8f8f8;
  --body-text-color: #656565;
  --body-link-color: #f12020;
  --posts-bg-color: #ffffff;
  --posts-title-color: #111111;
  --posts-text-color: #656565;
  --body-font: 'Noto Sans', system-ui, -apple-system, sans-serif;
}

/* Critical Inline CSS - Only Essential Styles */
body {
  font-family: var(--body-font);
  background-color: var(--body-bg-color);
  color: var(--body-text-color);
  margin: 0;
  padding: 0;
  line-height: 1.6;
  font-size: 14px;
  word-wrap: break-word;
}

#outer-wrapper {
  margin: 0 auto;
  background-color: var(--posts-bg-color);
  box-shadow: 0 0 5px rgba(0,0,0,.1);
  max-width: 1200px;
}

.container, .row {
  width: 100%;
  max-width: 960px;
  margin: 0 auto;
  padding: 0 15px;
  box-sizing: border-box;
}

/* Hide Blogger default elements */
#navbar-iframe, .widget-item-control, a.quickedit, .home-link, .feed-links {
  display: none !important;
}

/* Accessibility */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.skip-link {
  position: absolute;
  top: -40px;
  left: 6px;
  background: var(--main-color);
  color: white;
  padding: 8px;
  text-decoration: none;
  z-index: 1001;
  border-radius: 4px;
}

.skip-link:focus {
  top: 6px;
}

/* Basic Reset */
a, img { border: 0; }
a { color: var(--body-link-color); text-decoration: none; }
.clearfix { clear: both; }
.section, .widget, .widget ul { margin: 0; padding: 0; }
]]></b:skin>
    
